<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<style>
           body {
    font-family: 'Arial', sans-serif;
    background-color: #f3f4f6;
    margin: 0;
    padding: 0;
    color: #333;
}

h1 {
    text-align: center;
    color: #2c3e50;
    margin-top: 20px;
}

form {
    display: flex;
    justify-content: center;
    margin: 20px;
    gap: 10px;
}

form input {
    padding: 10px;
    border-radius: 5px;
    border: 1px solid #dcdcdc;
    font-size: 1rem;
    flex-grow: 1;
    max-width: 300px;
    transition: 0.3s;
}

form input:focus {
    border-color: #3498db;
    outline: none;
    box-shadow: 0 0 8px rgba(52, 152, 219, 0.4);
}

form button {
    padding: 10px 20px;
    border: none;
    background-color: #3498db;
    color: white;
    border-radius: 5px;
    font-size: 1rem;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

form button:hover {
    background-color: #2980b9;
}

table {
    width: 80%;
    margin: 0 auto;
    border-collapse: collapse;
    background-color: white;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
}

thead {
    background-color: #3498db;
    color: white;
}

thead th {
    padding: 10px;
}

tbody td {
    text-align: center;
    padding: 10px;
    border: 1px solid #dcdcdc;
}

button a {
    text-decoration: none;
    color: white;
    font-size: 0.9rem;
    padding: 5px 10px;
    border-radius: 5px;
    display: inline-block;
}

button a:hover {
    background-color: #2980b9;
}

button {
    background-color: #3498db;
    border: none;
    border-radius: 5px;
    cursor: pointer;
}

</style>
<body>
    <h1>To-Do List</h1>
<form action="/addTask" method="post">
    <input type="text" placeholder="Enter Task" name="task">
    <input type="datetime-local" name="startTime" >
    <input type="datetime-local" name="endTime">
    <button type="submit">Add Task</button>
</form>

<table border="1" width="30%">
    <thead>
        <th>ID</th>
        <th>Task</th>
        <th>Start Time</th>
        <th>End Time</th>
        <th colspan="2">Action</th>
    </thead>
    <tbody>
        <% tasks.map((e, i) => { %>
            <tr>
                <td><%= e.id %></td>
                <td><%= e.task %></td>
                <td><%= e.startTime %></td> 
                <td><%= e.endTime %></td>
                <td>
                    <button><a href="/editTask/<%= e.id %>">Edit</a></button>
                </td>
                <td>
                    <button><a href="/deleteTask?id=<%= e.id %>">Delete</a></button>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>

</body>
</html>